<!--pages/one/one.wxml-->
<view class="container">
  <view class="menu"> 
    <image src="{{imagePath}}" class="avatar" mode='aspectFit'></image>
      <view>姓名 : {{name}}</view>
      <view>学号 ：{{account}}</view>
      <view>手机 ：{{phoneNumber}}</view>
  </view>
  <view class="menu1">
    <view class="row">
      <input placeholder="姓名" placeholder-class="txt" bindinput="nameInput"/>
    </view>
    <view class="row">
      <input placeholder="学号" placeholder-class="txt" bindinput="accountInput"/>
    </view>
    <view class="row">
      <input placeholder="手机" placeholder-class="txt" bindinput="phoneNumberInput"/>
    </view>
    <view>
      <text></text>
    <view>
      <button class="submit" bindtap="updateMsg" style="width:30%">登录平台</button>
      <button class="submit" bindtap="signIn" style="width:30%">注册</button>
    </view>
  </view>
  </view>
</view>